{
  "extends": "eslint-config-edx",
  "parser": "babel-eslint",
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "config/*.js",
          "**/*.test.jsx",
          "setupTests.js"
        ]
      }
    ],
    "class-methods-use-this": [
      "off"
    ]
  },
  "env": {
    "jest": true
  }
}
