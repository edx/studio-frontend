{
  "name": "@edx/studio-frontend",
  "version": "0.0.0",
  "description": "The frontend for the Open edX platform",
  "scripts": {
    "lint": "eslint --ext .js --ext .jsx .",
    "start": "NODE_ENV=development BABEL_ENV=development $(npm bin)/webpack-dev-server --config=./config/webpack.dev.config.js --progress",
    "build": "NODE_ENV=production BABEL_ENV=production $(npm bin)/webpack --config=./config/webpack.prod.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "eslint-config-edx": "4.0.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "react-error-overlay": "^1.0.10",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie 11"
            ]
          }
        }
      ],
      "babel-preset-react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-edx",
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "config/*.js"
          ]
        }
      ]
    }
  }
}
